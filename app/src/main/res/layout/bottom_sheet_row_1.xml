<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_border"
        android:fontFamily="monospace"
        android:paddingStart="8dp"
        android:text="@string/bottom_sheet_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="18sp"
        android:textStyle="italic|bold" />

    <LinearLayout
        android:id="@+id/lin_layout_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_note_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="50"
            android:text="@string/delete_note"
            android:textColor="@android:color/black"
            app:icon="@drawable/ic_delete_note"
            app:iconTint="@android:color/black"
            app:iconGravity="start"
            android:enabled="false"
            android:inputType="textCapSentences" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_note_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="50"
            android:text="@string/save_note"
            android:textColor="@android:color/black"
            app:icon="@drawable/ic_check_save_note"
            android:enabled="false"
            app:iconGravity="start"
            app:iconTint="@android:color/black" />

    </LinearLayout>

</LinearLayout>